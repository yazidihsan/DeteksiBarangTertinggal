<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/normalBlack"
    tools:context="ugm.sv.tugasakhir.reminder.SplashScreen">

    <TextView
        android:id="@+id/text_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Device"
        android:textSize="70sp"
        android:textColor="@color/customBlue"
        android:textStyle="bold"
        android:layout_below="@+id/frame"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Reminder"
        android:textColor="@color/darkOrange"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/text_device"
        android:layout_alignEnd="@+id/text_device" />

    <ImageView
        android:id="@+id/frame"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/round_frame_orange"
        android:layout_below="@+id/line_a"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/reminder_icon"
        android:id="@+id/icon_app"
        android:layout_marginBottom="40dp"
        android:layout_alignBottom="@+id/frame"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/line_a"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:rotation="180"
        android:src="@drawable/line_art"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/line_b"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/line_art"
        android:layout_below="@id/text_reminder"/>

</RelativeLayout>
