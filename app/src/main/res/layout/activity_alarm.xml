<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/peringatan"
        android:fontFamily="sans-serif"
        android:text="PERHATIAN !"
        android:textColor="@color/normalRed"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/alert_icon"
        android:id="@+id/alert_icon"
        android:layout_below="@+id/peringatan"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="BARANG ANDA TERTINGGAL"
        android:textColor="@color/lightOrange"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@+id/alert_icon"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/alarm_btn_off"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="TURN OFF ALARM"
        android:textColor="@color/normalBlue"
        android:textStyle="bold"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true" />

</RelativeLayout>